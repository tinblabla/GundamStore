@model List<Model.EF.Product>
@{
    ViewBag.Title = "Trang Chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var listNewProducts = (List<Model.EF.Product>)ViewBag.NewProducts;
    var category = (Model.EF.ProductCategory)ViewBag.Category;
    var listNewProducts1 = (List<Model.EF.Product>)ViewBag.NewProducts1;
    var listNewProducts2 = (List<Model.EF.Product>)ViewBag.NewProducts2;
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://kit.fontawesome.com/cf03b6a817.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/css/item.css">
    <link rel="stylesheet" type="text/css" href="~/css/all.css">
    <link rel="stylesheet" type="text/css" href="~/css/HomeMenu.css">
    <link rel="stylesheet" type="text/css" href="~/bootstrap-3.4.1-dist/css/bootstrap.css">
</head>
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/hinh/banner.jpg" alt="Los Angeles">
        </div>
        <div class="item">
            <img src="~/hinh/banner5.jpg" alt="Chicago">
        </div>
        <div class="item">
            <img src="~/hinh/banner4.png" alt="Chicago">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="fix_html">
</div>
<h2 class="tittle" style="font-size: 2.5em; padding: 10px; text-transform: uppercase; font-family: 'ambleregular';">Sản Phẩm</h2>

<div class="row">
    @foreach (var item in listNewProducts)
    {
        var link = "/chi-tiet/" + item.MetaTitle + "-" + item.ID;
        <div class="col-md-4 text-center col-sm-6 col-xs-6">
            <div class="thumbnail product-box">
                <img src="@item.Image" alt="" />
                <div class="caption">
                    <h3><a href="@link">@item.Name </a></h3>
                    <p>Giá : <strong>$ @item.Price</strong>  </p>
                    <p><a href="/them-gio-hang?productId=@item.ID&quantity=1" class="btn btn-success" role="button">Thêm Vào Giỏ</a></p>
                </div>
            </div>
        </div>
    }  
</div>
    <div class="clearfix"></div>
